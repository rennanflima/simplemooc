{
    "python.terminal.activateEnvironment": true,
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    // Linting
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.pycodestyleEnabled": true,
    "python.linting.pycodestylePath": "${workspaceFolder}/.venv/bin/pycodestyle",
    "python.linting.pycodestyleArgs": ["--ignore=E501"],
    "python.linting.pylintPath": "${workspaceFolder}/.venv/bin/pylint",
    "python.linting.pylintArgs": ["--max-line-length", "150", "--load-plugins", "pylint_django"],
    "python.linting.flake8Path": "${workspaceFolder}/.venv/bin/flake8",
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": ["--ignore=E501", "--verbose"],
    
    "python.jediEnabled": false,
    // Formatação do código Python 
    "python.formatting.autopep8Path": "${workspaceFolder}/.venv/bin/autopep8",
    "python.formatting.provider": "autopep8",
    "python.formatting.autopep8Args": ["--max-line-length", "150", "--aggressive"],
    "python.formatting.blackArgs": ["--line-length", "150"],
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 500,
    "python.sortImports.path": "${workspaceFolder}/.venv/bin/isort",
    "[python]": {
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true,
        },
    },
    "files.exclude": {
        ".git": false,
        ".vscode": false,
        "**/__pycache__/": true,
        "**/*.pyc": true
    },
    "python.languageServer": "Pylance",
    "workbench.editor.enablePreview": false,
    "djangointellisense.settingsModule": "simplemooc.settings",
    "djangointellisense.projectRoot": "${workspaceFolder}/simplemooc",
}
